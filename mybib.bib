issn = {21699356},
journal = {Journal of Geophysical Research: Solid Earth},
pages = {1--26},
title = {{Postseismic deformation due to the Mw 6.0 2004 Parkfield earthquake: Stress-driven creep on a fault with spatially variable rate-and-state friction parameters}},
