file = {:cmld/data2/hinest/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Barbot, Fialko, Bock - 2009 - Postseismic deformation due to the Mw 6.0 2004 Parkfield earthquake Stress-driven creep on a fault with(3).pdf:pdf},
