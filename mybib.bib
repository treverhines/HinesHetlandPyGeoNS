file = {:cmld/data2/hinest/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Kanda, Simons - 2012 - Practical implications of the geometrical sensitivity of elastic dislocation models for field geologic surveys.pdf:pdf},
isbn = {0040-1951},
issn = {00401951},
journal = {Tectonophysics},
keywords = {Backslip model,Coastal uplift and hingeline,Elastic subducting plate model,Geodetic data inversion,Sensitivity to plate geometry and slip distributio,Subduction zone seismic cycle deformation},
pages = {94--104},
title = {{Practical implications of the geometrical sensitivity of elastic dislocation models for field geologic surveys}},
