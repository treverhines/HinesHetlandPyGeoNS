file = {:cmld/data2/hinest/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Zeng, Shen - 2014 - Fault network modeling of crustal deformation in California constrained using GPS and geologic observations.pdf:pdf},
isbn = {0040-1951},
