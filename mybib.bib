isbn = {0148-0227},
issn = {21699356},
journal = {Journal of Geophysical Research: Solid Earth},
number = {B01403},
pages = {1--10},
title = {{On seasonal signals in geodetic time series}},
volume = {117},
year = {2012}
}
@article{Kaufmann2000,
