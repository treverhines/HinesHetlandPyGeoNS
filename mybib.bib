doi = {10.1029/2003JB002925},
file = {:cmld/data2/hinest/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Mont{\'{e}}si - 2004 - Controls of shear zone rheology and tectonic loading on postseismic creep.pdf:pdf},
