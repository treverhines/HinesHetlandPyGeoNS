file = {:cmld/data2/hinest/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/McCaffrey et al. - 2007 - Fault locking, block rotation and crustal deformation in the Pacific Northwest.pdf:pdf},
isbn = {0956-540X},
