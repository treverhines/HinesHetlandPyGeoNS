doi = {10.1029/2005JB003979},
file = {:cmld/data2/hinest/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Shearer, Prieto, Hauksson - 2006 - Comprehensive analysis of earthquake source spectra in southern California.pdf:pdf},
