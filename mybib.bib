author = {Feigl, Kurt L and Agnew, Duncan C and Bock, Yehuda and Dong, Danan},
doi = {10.1029/93JB02405},
file = {:cmld/data2/hinest/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Feigl et al. - 1993 - Space Geodetic Measurement of Crustal Deformation in Central and Southern California, 1984–1992.pdf:pdf},
isbn = {0148-0227},
issn = {0148-0227},
journal = {Journal of Geophysical Research},
keywords = {http://dx.doi.org/10.1029/93JB02405, doi:10.1029/9},
