isbn = {0037-1106},
issn = {00371106},
journal = {Bulletin of the Seismological Society of America},
number = {4 B},
pages = {269--282},
title = {{Coseismic and postseismic slip of the 2004 Parkfield earthquake from space-geodetic data}},
volume = {96},
year = {2006}
}
