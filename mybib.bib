@article{Johnson2006,
abstract = {The abundance of geodetic and seismic data recording$\backslash$npostseismic deformation following the 2004 Parkfield earthquake provides an$\backslash$nunprecedented opportunity to resolve frictional properties on the Parkfield$\backslash$nsection of the San Andreas fault. The Parkfield segment is a transition$\backslash$nbetween the locked section to the southeast that last ruptured in the 1857 Fort$\backslash$nTejon earthquake and the creeping section to the northwest. We develop$\backslash$nthree-dimensional rate- and state-dependent friction models of afterslip$\backslash$nfollowing the 2004 earthquake to investigate the frictional behavior of the$\backslash$nfault. It is assumed that the coseismic rupture occurred on an area of the fault$\backslash$nsurrounded by aseismic creep that accelerated after the earthquake.$\backslash$nWe estimate the distribution of coseismic slip, afterslip, and rate–state$\backslash$nfrictional parameters by inverting a two-step slip model. In the model we$\backslash$n(1) estimate the coseismic slip distribution from 1-Hz Global Positioning System$\backslash$n(GPS) data and (2) use the corresponding coseismic shear stress$\backslash$nchange on the fault as input into a numerical afterslip model governed by$\backslash$nrate–state friction. We find the rate–state frictional parameter A– B, an$\backslash$nindicator of frictional stability, is in the range 10−4–10−3 at 50 MPa normal$\backslash$nstress, which is near the transition from potentially unstable (negative$\backslash$nA–B) to nominally stable (positive A–B) friction. The estimate of A–B values$\backslash$nfalls within a wide range of experimental values reported for$\backslash$nserpentinite, which crops out along the San Andreas fault zone. The critical$\backslash$nslip distance, dc, which characterizes the distance over which strength$\backslash$nbreaks down during a slip event, is in the range 0.01–0.1 m, consistent with$\backslash$nseismic estimates and a fault gouge thickness of 1–10 m. The afterslip$\backslash$nmodel reproduces most features observed in the GPS time-series data including$\backslash$nhigh surface velocities in the first few months after the earthquake and$\backslash$nlower rates at later times, as well as the cumulative postseismic displacement.$\backslash$nThe model tends to underpredict the displacement data at later times,$\backslash$nsuggesting that perhaps the modeled afterslip period ends too quickly or an$\backslash$nunmodeled deformation process dominates the signal at later times.},
author = {Johnson, Kaj M. and B{\"{u}}rgmann, Roland and Larson, Kristine},
doi = {10.1785/0120050808},
file = {:cmld/data2/hinest/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Johnson, B{\"{u}}rgmann, Larson - 2006 - Factional properties on the San Andreas fault near Parkfield, California, inferred from models of af.pdf:pdf},
isbn = {0037-1106},
issn = {00371106},
journal = {Bulletin of the Seismological Society of America},
number = {4 B},
pages = {321--338},
title = {{Factional properties on the San Andreas fault near Parkfield, California, inferred from models of afterslip following the 2004 earthquake}},
volume = {96},
year = {2006}
}
@article{Bakun2005,
abstract = {Obtaining high-quality measurements close to a large earthquake is not easy: one has to be in the right place at the right time with the right instruments. Such a convergence happened, for the first time, when the 28 September 2004 Parkfield, California, earthquake occurred on the San Andreas fault in the middle of a dense network of instruments designed to record it. The resulting data reveal aspects of the earthquake process never before seen. Here we show what these data, when combined with data from earlier Parkfield earthquakes, tell us about earthquake physics and earthquake prediction. The 2004 Parkfield earthquake, with its lack of obvious precursors, demonstrates that reliable short-term earthquake prediction still is not achievable. To reduce the societal impact of earthquakes now, we should focus on developing the next generation of models that can provide better predictions of the strength and location of damaging ground shaking.},
author = {Bakun, W H and Aagaard, B and Dost, B and Ellsworth, W L and Hardebeck, J L and Harris, R a and Ji, C and Johnston, M J S and Langbein, J and Lienkaemper, J J and Michael, a J and Murray, J R and Nadeau, R M and Reasenberg, P a and Reichle, M S and Roeloffs, E a and Shakal, a and Simpson, R W and Waldhauser, F},
doi = {10.1038/nature04067},
