file = {:cmld/data2/hinest/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Carpenter, Marone, Saffer - 2011 - Weakness of the San Andreas Fault revealed by samples from the active fault zone.pdf:pdf},
isbn = {1752-0894},
issn = {1752-0894},
journal = {Nature Geoscience},
number = {4},
pages = {251--254},
title = {{Weakness of the San Andreas Fault revealed by samples from the active fault zone}},
url = {http://dx.doi.org/10.1038/ngeo1089},
volume = {4},
year = {2011}
}
