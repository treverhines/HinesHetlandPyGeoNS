journal = {Journal of Geophysical Research},
keywords = {doi:10.102,http://dx.doi.org/10.1029/2001JB000456},
number = {B2},
pages = {1--15},
title = {{A transient subduction zone slip episode in southwest Japan observed by the nationwide GPS array}},
