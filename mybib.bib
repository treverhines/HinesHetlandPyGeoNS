file = {:cmld/data2/hinest/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Hearn, B{\"{u}}rgmann, Reilinger - 2002 - Dynamics of İzmit earthquake postseismic deformation and loading of the D{\"{u}}zce earthquake hypocent.pdf:pdf},
